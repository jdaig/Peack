<% provide(:title, "Search service") %>
<h1>Search service</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@company, url: find_service_path) do |f| %>

      <%= f.label "Company name" %>
      <%= f.text_field :name_co, class: 'form-control' %>

      <%= f.label "Departament" %>
      <%= f.text_field :type_co, class: 'form-control' %>

      <%= f.submit "Search for company", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>