<% provide(:title, "Found") %>
<h1>Found</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%if @person_array%>
  <%@person_array.each do |person|%>
  <br><br>
    <h3>
    	<% user = User.find(person.user_id)%>
        <%= gravatar_for  user%>
        <%= link_to person.name, user %><br>
        <%= person.ocupation %><br>
      </h3>
   <%end%>
  <%else%>
  	<h1>Without matches</h1>
        <%= link_to "Back", search_path, class: "btn btn-primary"  %>
  <%end%>
  </div>
</div>